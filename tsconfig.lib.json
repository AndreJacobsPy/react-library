// tsconfig.lib.json
{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "stripInternal": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/index.ts", "src/components/**/*"]
}